{
    "name": "crate/citrus",
    "type": "library",
    "version": "0.1.0",
    "description": "The main Application Framework behind our headless API-driven Crate CMS.",
    "keywords": [
        "application",
        "framework",
        "router",
        "routing",
        "psr"
    ],
    "homepage": "https://crate.md",
    "license": "MIT",
    "authors": [
        {
            "name": "rat.md",
            "email": "info@crate.md",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "php-ds/php-ds": "^1.4",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.0"
    },
    "suggest": {
        "ext-ds": "Increase performance by using the DS extension instead of the polyfill."
    },
    "autoload": {
        "psr-4": {
            "Citrus\\": "src/"
        },
        "files": [
            "src/polyfills.php",
            "src/functions.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
